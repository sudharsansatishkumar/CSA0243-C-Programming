#include<stdio.h>
#include<math.h>
int main()
{
 float a,b,c,s,area;
 printf("Enter the value of A:");
 scanf("%f",&a);
 printf("Enter the value of B:");
 scanf("%f",&b);
 printf("Enter the value of C:");
 scanf("%f",&c);
 s=a+b+c/2;
 area=sqrt((s*(s-a)*(s-b)*(s-c)));
 printf("Area of triangle is:%f,",area);
 return 0;
}
